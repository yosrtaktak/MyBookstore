{% extends 'base.html.twig' %}

{% block title %}Mon Panier - MyBookstore{% endblock %}

{% block content %}
<div class="container my-5">
    <div class="row">
        <div class="col-12">
            <h1 class="display-5 fw-bold mb-4">
                {{ ux_icon('tabler:shopping-cart') }} Mon Panier
            </h1>
        </div>
    </div>

    {% if cartItems is empty %}
        {# Panier vide #}
        <div class="row">
            <div class="col-md-6 mx-auto text-center">
                <div class="card border-0 shadow-sm p-5">
                    <div class="card-body">
                        <div class="mb-4" style="font-size: 5rem; opacity: 0.3;">
                            {{ ux_icon('tabler:shopping-cart-off') }}
                        </div>
                        <h3 class="card-title mb-3">Votre panier est vide</h3>
                        <p class="card-text text-muted mb-4">
                            Découvrez notre catalogue et ajoutez des livres à votre panier.
                        </p>
                        <a href="{{ path('app_catalogue') }}" class="btn btn-primary btn-lg">
                            {{ ux_icon('tabler:books') }} Continuer mes achats
                        </a>
                    </div>
                </div>
            </div>
        </div>
    {% else %}
        {# Panier avec articles #}
        <div class="row">
            <div class="col-lg-8 mb-4">
                <div class="card border-0 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title mb-4">
                            Articles dans votre panier ({{ cartItems|length }})
                        </h5>

                        <div class="table-responsive">
                            <table class="table align-middle">
                                <thead class="table-light">
                                    <tr>
                                        <th style="width: 100px;">Image</th>
                                        <th>Livre</th>
                                        <th style="width: 120px;" class="text-end">Prix unitaire</th>
                                        <th style="width: 150px;" class="text-center">Quantité</th>
                                        <th style="width: 120px;" class="text-end">Sous-total</th>
                                        <th style="width: 80px;" class="text-center">Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for item in cartItems %}
                                    {% set livre = item.livre %}
                                    {% set quantity = item.quantity %}
                                    {% set subtotal = livre.prix * quantity %}
                                    <tr>
                                        <td>
                                            <a href="{{ path('app_book_show', {id: livre.id}) }}">
                                                {% if livre.imageCouverture %}
                                                    <img src="{{ asset('uploads/livres/' ~ livre.imageCouverture) }}" 
                                                         alt="{{ livre.titre }}"
                                                         class="img-thumbnail"
                                                         style="width: 80px; height: 100px; object-fit: cover;">
                                                {% else %}
                                                    <div class="bg-light d-flex align-items-center justify-content-center img-thumbnail"
                                                         style="width: 80px; height: 100px;">
                                                        {{ ux_icon('tabler:book') }}
                                                    </div>
                                                {% endif %}
                                            </a>
                                        </td>
                                        <td>
                                            <h6 class="mb-1">
                                                <a href="{{ path('app_book_show', {id: livre.id}) }}" 
                                                   class="text-decoration-none text-dark">
                                                    {{ livre.titre }}
                                                </a>
                                            </h6>
                                            <small class="text-muted">
                                                {% if livre.auteurs|length > 0 %}
                                                    {{ livre.auteurs[0].prenom }} {{ livre.auteurs[0].nom }}
                                                {% endif %}
                                            </small>
                                            {% if quantity > livre.stock %}
                                                <br>
                                                <span class="badge bg-danger mt-1">
                                                    Stock insuffisant ({{ livre.stock }} disponible{{ livre.stock > 1 ? 's' : '' }})
                                                </span>
                                            {% elseif livre.stock < 5 %}
                                                <br>
                                                <span class="badge bg-warning text-dark mt-1">
                                                    Plus que {{ livre.stock }} en stock
                                                </span>
                                            {% endif %}
                                        </td>
                                        <td class="text-end">
                                            <strong>{{ livre.prix }} €</strong>
                                        </td>
                                        <td>
                                            <div class="input-group input-group-sm">
                                                <button class="btn btn-outline-secondary" type="button"
                                                        onclick="updateQuantity({{ livre.id }}, {{ quantity - 1 }})">
                                                    {{ ux_icon('tabler:minus') }}
                                                </button>
                                                <input type="number" 
                                                       class="form-control text-center" 
                                                       value="{{ quantity }}"
                                                       min="1" 
                                                       max="{{ livre.stock }}"
                                                       id="quantity-{{ livre.id }}"
                                                       style="max-width: 70px;">
                                                <button class="btn btn-outline-secondary" type="button"
                                                        onclick="updateQuantity({{ livre.id }}, {{ quantity + 1 }})">
                                                    {{ ux_icon('tabler:plus') }}
                                                </button>
                                            </div>
                                            <div class="text-center mt-1">
                                                <button class="btn btn-link btn-sm text-decoration-none p-0" 
                                                        onclick="updateQuantityFromInput({{ livre.id }})">
                                                    <small>{{ ux_icon('tabler:refresh') }} Actualiser</small>
                                                </button>
                                            </div>
                                        </td>
                                        <td class="text-end">
                                            <strong class="text-primary">{{ subtotal|number_format(2, ',', ' ') }} €</strong>
                                        </td>
                                        <td class="text-center">
                                            <form method="post" action="{{ path('app_cart_remove', {id: livre.id}) }}" 
                                                  onsubmit="return confirm('Êtes-vous sûr de vouloir retirer cet article ?');">
                                                <button type="submit" class="btn btn-outline-danger btn-sm" 
                                                        title="Supprimer">
                                                    {{ ux_icon('tabler:trash') }}
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>

                        <div class="mt-3">
                            <a href="{{ path('app_catalogue') }}" class="btn btn-outline-secondary">
                                {{ ux_icon('tabler:arrow-left') }} Continuer mes achats
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            {# Récapitulatif #}
            <div class="col-lg-4">
                <div class="card border-0 shadow-sm sticky-top" style="top: 20px;">
                    <div class="card-body">
                        <h5 class="card-title mb-4">Récapitulatif</h5>

                        <div class="d-flex justify-content-between mb-3">
                            <span>Sous-total</span>
                            <strong>{{ total|number_format(2, ',', ' ') }} €</strong>
                        </div>

                        <div class="d-flex justify-content-between mb-3 pb-3 border-bottom">
                            <span>Frais de livraison</span>
                            {% if total >= 30 %}
                                <span class="text-success">
                                    <strong>Gratuit</strong>
                                    {{ ux_icon('tabler:gift') }}
                                </span>
                            {% else %}
                                <strong>5,00 €</strong>
                            {% endif %}
                        </div>

                        {% set finalTotal = total >= 30 ? total : total + 5 %}
                        <div class="d-flex justify-content-between mb-4">
                            <h5 class="mb-0">Total</h5>
                            <h5 class="mb-0 text-primary">{{ finalTotal|number_format(2, ',', ' ') }} €</h5>
                        </div>

                        {% if total < 30 %}
                            <div class="alert alert-info py-2 small">
                                {{ ux_icon('tabler:info-circle') }}
                                Plus que <strong>{{ (30 - total)|number_format(2, ',', ' ') }} €</strong> 
                                pour la livraison gratuite !
                            </div>
                        {% endif %}

                        <div class="d-grid gap-2">
                            <a href="{{ path('app_panier_valider') }}" class="btn btn-primary btn-lg">
                                {{ ux_icon('tabler:check') }} Valider la commande
                            </a>

                            <form method="post" action="{{ path('app_cart_clear') }}" 
                                  onsubmit="return confirm('Êtes-vous sûr de vouloir vider le panier ?');">
                                <button type="submit" class="btn btn-outline-danger w-100">
                                    {{ ux_icon('tabler:trash') }} Vider le panier
                                </button>
                            </form>
                        </div>

                        <hr class="my-4">

                        <div class="small text-muted">
                            <p class="mb-2">
                                <strong>{{ ux_icon('tabler:truck-delivery') }} Livraison :</strong>
                                2-3 jours ouvrés
                            </p>
                            <p class="mb-2">
                                <strong>{{ ux_icon('tabler:shield-check') }} Paiement :</strong>
                                100% sécurisé
                            </p>
                            <p class="mb-0">
                                <strong>{{ ux_icon('tabler:reload') }} Retour :</strong>
                                Gratuit sous 14 jours
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% endif %}
</div>

<script>
// Met à jour la quantité d'un article
function updateQuantity(livreId, newQuantity) {
    if (newQuantity < 1) {
        if (confirm('Voulez-vous retirer cet article du panier ?')) {
            const form = document.createElement('form');
            form.method = 'POST';
            form.action = '{{ path('app_cart_remove', {id: '__ID__'}) }}'.replace('__ID__', livreId);
            document.body.appendChild(form);
            form.submit();
        }
        return;
    }

    const form = document.createElement('form');
    form.method = 'POST';
    form.action = '{{ path('app_cart_update', {id: '__ID__', quantity: '__QTY__'}) }}'
        .replace('__ID__', livreId)
        .replace('__QTY__', newQuantity);
    document.body.appendChild(form);
    form.submit();
}

// Met à jour la quantité depuis l'input
function updateQuantityFromInput(livreId) {
    const input = document.getElementById('quantity-' + livreId);
    const newQuantity = parseInt(input.value);
    
    if (newQuantity && newQuantity > 0) {
        updateQuantity(livreId, newQuantity);
    }
}

// Permet la mise à jour avec la touche Entrée
document.querySelectorAll('[id^="quantity-"]').forEach(input => {
    input.addEventListener('keypress', function(e) {
        if (e.key === 'Enter') {
            e.preventDefault();
            const livreId = this.id.replace('quantity-', '');
            updateQuantityFromInput(livreId);
        }
    });
});
</script>

<style>
.sticky-top {
    position: sticky;
}
@media (max-width: 992px) {
    .sticky-top {
        position: relative !important;
    }
}
</style>
{% endblock %}
