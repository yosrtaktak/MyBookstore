{% extends 'base.html.twig' %}

{% block title %}Mot de passe oublié - MyBookstore{% endblock %}

{% block content %}
<section class="auth-page">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-5">
                <div class="auth-card animate-fadeInUp">
                    {# Header #}
                    <div class="auth-header">
                        <div class="mb-3">
                            <i class="fas fa-key fa-3x" style="color: #fbbf24;"></i>
                        </div>
                        <h2>Mot de passe oublié</h2>
                        <p>Entrez votre email pour recevoir un lien de réinitialisation</p>
                    </div>

                    {# Body #}
                    <div class="auth-body">

                        {% if emailSent %}
                            {# Success Message #}
                            <div class="text-center py-4">
                                <div class="mb-4">
                                    <span class="d-inline-flex align-items-center justify-content-center rounded-circle"
                                          style="width: 80px; height: 80px; background: #d1fae5;">
                                        <i class="fas fa-envelope-open-text fa-2x" style="color: #059669;"></i>
                                    </span>
                                </div>
                                <h5 class="mb-3" style="color: #059669;">Email envoyé !</h5>
                                <p class="text-muted mb-4">
                                    Si un compte existe avec cette adresse email, vous recevrez un lien
                                    pour réinitialiser votre mot de passe dans quelques minutes.
                                </p>

                                {# Dev mode: Show reset link directly #}
                                {% if devResetLink is defined and devResetLink %}
                                <div class="alert alert-info text-start mb-4" role="alert">
                                    <strong><i class="fas fa-code me-2"></i>Mode développement</strong>
                                    <p class="mb-2 small">Lien de réinitialisation (visible uniquement en dev) :</p>
                                    <a href="{{ devResetLink }}" class="btn btn-sm btn-primary">
                                        <i class="fas fa-external-link-alt me-1"></i> Réinitialiser le mot de passe
                                    </a>
                                </div>
                                {% else %}
                                <div class="alert alert-warning text-start mb-4" role="alert">
                                    <strong><i class="fas fa-exclamation-triangle me-2"></i>Info</strong>
                                    <p class="mb-0 small">Aucun compte trouvé avec cet email, ou le mode production est actif.</p>
                                </div>
                                {% endif %}

                                <p class="text-muted small mb-4">
                                    <i class="fas fa-info-circle me-1"></i>
                                    N'oubliez pas de vérifier votre dossier spam.
                                </p>
                                <a href="{{ path('app_login') }}" class="btn btn-primary">
                                    <i class="fas fa-arrow-left me-2"></i> Retour à la connexion
                                </a>
                            </div>
                        {% else %}
                            {# Error Alert #}
                            {% if error %}
                                <div class="alert alert-danger animate-fadeInUp" role="alert">
                                    <i class="fas fa-exclamation-circle me-2"></i>
                                    {{ error }}
                                </div>
                            {% endif %}

                            {# Request Form #}
                            <form method="post" action="{{ path('app_forgot_password_request') }}" data-turbo="false">
                                <div class="mb-4">
                                    <label for="email" class="form-label">
                                        <i class="fas fa-envelope me-1 text-muted"></i> Adresse email
                                    </label>
                                    <input type="email"
                                           name="email"
                                           id="email"
                                           class="form-control form-control-lg"
                                           placeholder="votre@email.com"
                                           required
                                           autofocus>
                                    <div class="form-text">
                                        <i class="fas fa-info-circle me-1"></i>
                                        Entrez l'adresse email associée à votre compte.
                                    </div>
                                </div>

                                <button type="submit" class="btn btn-primary btn-lg w-100">
                                    <i class="fas fa-paper-plane me-2"></i> Envoyer le lien
                                </button>
                            </form>

                            <div class="text-center mt-4">
                                <a href="{{ path('app_login') }}" class="text-muted">
                                    <i class="fas fa-arrow-left me-1"></i> Retour à la connexion
                                </a>
                            </div>
                        {% endif %}
                    </div>

                    {# Footer #}
                    <div class="auth-footer">
                        <p class="mb-0">
                            Pas encore de compte ?
                            <a href="{{ path('app_register') }}" class="fw-bold" style="color: #334e68;">
                                Créer un compte
                            </a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}
