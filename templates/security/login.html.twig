{% extends 'base.html.twig' %}

{% block title %}Connexion - MyBookstore{% endblock %}

{% block content %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h2 class="mb-0">Se connecter</h2>
                </div>
                <div class="card-body p-4">
                    {% if error %}
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <strong>Erreur d'authentification !</strong>
                            {{ error.messageKey|trans(error.messageData, 'security') }}
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Fermer"></button>
                        </div>
                    {% endif %}

                    <form method="post" action="{{ path('app_login') }}">
                        <div class="mb-3">
                            <label for="inputEmail" class="form-label">Adresse email</label>
                            <input type="email" name="_username" id="inputEmail" class="form-control" 
                                   value="{{ last_username }}" required autofocus>
                        </div>

                        <div class="mb-3">
                            <label for="inputPassword" class="form-label">Mot de passe</label>
                            <input type="password" name="_password" id="inputPassword" class="form-control" required>
                        </div>

                        <div class="mb-3 form-check">
                            <input type="checkbox" name="_remember_me" id="remember_me" class="form-check-input">
                            <label class="form-check-label" for="remember_me">
                                Se souvenir de moi
                            </label>
                        </div>

                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                        <button type="submit" class="btn btn-primary btn-lg w-100">Se connecter</button>
                    </form>

                    <hr>
                    <p class="text-center mt-3">
                        Pas encore de compte ? 
                        <a href="{{ path('app_register') }}" class="fw-bold">S'inscrire ici</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
