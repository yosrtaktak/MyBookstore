{% extends 'base.html.twig' %}

{% block title %}{{ livre.titre }} - MyBookstore{% endblock %}

{% block content %}
{# ===== Breadcrumb Section ===== #}
<section class="breadcrumb-section">
    <div class="container">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item">
                    <a href="{{ path('app_home') }}"><i class="fas fa-home me-1"></i> Accueil</a>
                </li>
                <li class="breadcrumb-item">
                    <a href="{{ path('app_catalogue') }}">Catalogue</a>
                </li>
                <li class="breadcrumb-item active" aria-current="page">
                    {{ livre.titre|length > 40 ? livre.titre|slice(0, 40) ~ '...' : livre.titre }}
                </li>
            </ol>
        </nav>
    </div>
</section>

{# ===== Book Details Section ===== #}
<section class="section">
    <div class="container">
        <div class="row">
            {# Book Image & Actions #}
            <div class="col-lg-4 mb-4 mb-lg-0">
                <div class="position-sticky" style="top: 100px;">
                    {# Book Cover Image #}
                    <div class="book-detail-image mb-4">
                        {% if livre.imageCouverture %}
                            <img src="{{ asset('uploads/livres/' ~ livre.imageCouverture) }}"
                                 alt="{{ livre.titre }}"
                                 class="img-fluid w-100">
                        {% else %}
                            <div class="d-flex align-items-center justify-content-center"
                                 style="height: 500px; background: linear-gradient(135deg, #f1f5f9, #e2e8f0); border-radius: 1rem;">
                                <i class="fas fa-book" style="font-size: 8rem; color: #94a3b8;"></i>
                            </div>
                        {% endif %}
                    </div>

                    {# Purchase Box #}
                    <div class="card">
                        <div class="card-body">
                            {# Price & Stock #}
                            <div class="d-flex justify-content-between align-items-center mb-4">
                                <div>
                                    <span class="text-muted small">Prix</span>
                                    <h2 class="mb-0" style="font-family: 'Playfair Display', serif; color: #334e68;">
                                        {{ livre.prix|number_format(2, ',', ' ') }} €
                                    </h2>
                                </div>
                                {% if livre.stock > 10 %}
                                    <span class="stock-badge in-stock px-3 py-2">
                                        <i class="fas fa-check me-1"></i> En stock ({{ livre.stock }})
                                    </span>
                                {% elseif livre.stock > 0 %}
                                    <span class="stock-badge low-stock px-3 py-2">
                                        <i class="fas fa-exclamation me-1"></i> {{ livre.stock }} restant(s)
                                    </span>
                                {% else %}
                                    <span class="stock-badge out-of-stock px-3 py-2">
                                        <i class="fas fa-times me-1"></i> Rupture
                                    </span>
                                {% endif %}
                            </div>

                            {# Add to Cart Form #}
                            {% if livre.stock > 0 %}
                                {% if is_granted('ROLE_ABONNE') %}
                                    <form method="post" action="{{ path('app_cart_add', {id: livre.id}) }}">
                                        <div class="mb-3">
                                            <label for="quantity" class="form-label fw-semibold">
                                                <i class="fas fa-boxes me-1"></i> Quantité
                                            </label>
                                            <select class="form-select form-select-lg" id="quantity" name="quantity" required>
                                                {% for i in 1..min(10, livre.stock) %}
                                                    <option value="{{ i }}">{{ i }}</option>
                                                {% endfor %}
                                            </select>
                                            {% if livre.stock < 10 %}
                                                <small class="text-muted">
                                                    <i class="fas fa-info-circle me-1"></i>
                                                    Maximum {{ livre.stock }} disponible{{ livre.stock > 1 ? 's' : '' }}
                                                </small>
                                            {% endif %}
                                        </div>
                                        <button type="submit" class="btn btn-primary btn-lg w-100">
                                            <i class="fas fa-cart-plus me-2"></i> Ajouter au panier
                                        </button>
                                    </form>
                                {% else %}
                                    <div class="alert alert-info mb-3">
                                        <i class="fas fa-info-circle me-2"></i>
                                        Connectez-vous pour commander ce livre.
                                    </div>
                                    <a href="{{ path('app_login') }}" class="btn btn-primary btn-lg w-100">
                                        <i class="fas fa-sign-in-alt me-2"></i> Se connecter
                                    </a>
                                {% endif %}
                            {% else %}
                                <button class="btn btn-secondary btn-lg w-100" disabled>
                                    <i class="fas fa-times me-2"></i> Indisponible
                                </button>
                            {% endif %}

                            <a href="{{ path('app_catalogue') }}" class="btn btn-outline-secondary w-100 mt-3">
                                <i class="fas fa-arrow-left me-2"></i> Retour au catalogue
                            </a>

                            {# Benefits #}
                            <div class="mt-4 pt-4 border-top">
                                <div class="d-flex align-items-center mb-3">
                                    <i class="fas fa-truck text-success me-3"></i>
                                    <small>Livraison gratuite dès 30€</small>
                                </div>
                                <div class="d-flex align-items-center mb-3">
                                    <i class="fas fa-shield-alt text-success me-3"></i>
                                    <small>Paiement 100% sécurisé</small>
                                </div>
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-undo text-success me-3"></i>
                                    <small>Retour gratuit sous 14 jours</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            {# Book Information #}
            <div class="col-lg-8">
                {# Title & Authors #}
                <h1 style="font-family: 'Playfair Display', serif; font-size: 2.5rem; margin-bottom: 1rem;">
                    {{ livre.titre }}
                </h1>

                {% if livre.auteurs|length > 0 %}
                <p class="lead mb-4" style="color: #64748b;">
                    <i class="fas fa-feather-alt me-2"></i>
                    Par
                    {% for auteur in livre.auteurs %}
                        <strong>{{ auteur.prenom }} {{ auteur.nom }}</strong>{% if not loop.last %}, {% endif %}
                    {% endfor %}
                </p>
                {% endif %}

                {# Categories #}
                {% if livre.categories|length > 0 %}
                <div class="mb-4">
                    {% for categorie in livre.categories %}
                        <a href="{{ path('app_catalogue', {categorie: categorie.id}) }}"
                           class="badge badge-primary text-decoration-none me-2 py-2 px-3"
                           style="background: linear-gradient(135deg, #334e68, #243b53); font-size: 0.875rem;">
                            <i class="fas fa-tag me-1"></i> {{ categorie.libelle }}
                        </a>
                    {% endfor %}
                </div>
                {% endif %}

                <hr class="my-4">

                {# Book Details Grid #}
                <div class="row mb-4">
                    <div class="col-md-6">
                        <div class="card h-100" style="background: #f8fafc;">
                            <div class="card-body">
                                <h6 class="text-muted mb-3">
                                    <i class="fas fa-info-circle me-2"></i> Informations
                                </h6>
                                <ul class="list-unstyled mb-0">
                                    <li class="mb-2 d-flex justify-content-between">
                                        <span class="text-muted">ISBN:</span>
                                        <code>{{ livre.isbn }}</code>
                                    </li>
                                    <li class="mb-2 d-flex justify-content-between">
                                        <span class="text-muted">Éditeur:</span>
                                        <a href="{{ path('app_catalogue', {editeur: livre.editeur.id}) }}"
                                           class="text-decoration-none">
                                            {{ livre.editeur.nomEditeur }}
                                        </a>
                                    </li>
                                    <li class="mb-2 d-flex justify-content-between">
                                        <span class="text-muted">Pages:</span>
                                        <span>{{ livre.nbPages }}</span>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="card h-100" style="background: #f8fafc;">
                            <div class="card-body">
                                <h6 class="text-muted mb-3">
                                    <i class="fas fa-book-open me-2"></i> Détails
                                </h6>
                                <ul class="list-unstyled mb-0">
                                    <li class="mb-2 d-flex justify-content-between">
                                        <span class="text-muted">Langue:</span>
                                        <span>{{ livre.langue }}</span>
                                    </li>
                                    {% if livre.dateEdition %}
                                    <li class="mb-2 d-flex justify-content-between">
                                        <span class="text-muted">Date d'édition:</span>
                                        <span>{{ livre.dateEdition|date('d/m/Y') }}</span>
                                    </li>
                                    {% endif %}
                                    <li class="mb-2 d-flex justify-content-between">
                                        <span class="text-muted">Exemplaires:</span>
                                        <span>{{ livre.nbExemplaires }}</span>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>

                {# Description #}
                {% if livre.description %}
                <div class="card mb-4">
                    <div class="card-header" style="background: linear-gradient(135deg, #f0f4f8, #e2e8f0); border: none;">
                        <h5 class="mb-0" style="color: #334e68;">
                            <i class="fas fa-align-left me-2"></i> Description
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="lead" style="line-height: 1.8; color: #475569;">
                            {{ livre.description|nl2br }}
                        </div>
                    </div>
                </div>
                {% endif %}

                {# Delivery Info #}
                <div class="card" style="border: 2px solid #334e68;">
                    <div class="card-body">
                        <h6 class="mb-3" style="color: #334e68;">
                            <i class="fas fa-truck me-2"></i> Informations de livraison
                        </h6>
                        <div class="row">
                            <div class="col-md-4 text-center mb-3 mb-md-0">
                                <i class="fas fa-gift fa-2x mb-2" style="color: #334e68;"></i>
                                <p class="mb-0 small">Livraison gratuite<br>dès 30€ d'achat</p>
                            </div>
                            <div class="col-md-4 text-center mb-3 mb-md-0">
                                <i class="fas fa-shipping-fast fa-2x mb-2" style="color: #334e68;"></i>
                                <p class="mb-0 small">Livraison en<br>2-3 jours ouvrés</p>
                            </div>
                            <div class="col-md-4 text-center">
                                <i class="fas fa-undo-alt fa-2x mb-2" style="color: #334e68;"></i>
                                <p class="mb-0 small">Retour gratuit<br>sous 14 jours</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        {# ===== Similar Books Section ===== #}
        {% if livresSimilaires|length > 0 %}
        <div class="mt-5 pt-5 border-top">
            <div class="section-header mb-4">
                <h2 class="section-title">
                    <i class="fas fa-lightbulb me-2" style="color: #fbbf24;"></i>
                    Vous pourriez aussi aimer
                </h2>
            </div>

            <div class="row g-4">
                {% for livreSimilaire in livresSimilaires %}
                <div class="col-lg-3 col-md-4 col-sm-6">
                    <div class="card book-card card-hover h-100">
                        <div class="card-img-container">
                            <a href="{{ path('app_book_show', {id: livreSimilaire.id}) }}">
                                {% if livreSimilaire.imageCouverture %}
                                    <img src="{{ asset('uploads/livres/' ~ livreSimilaire.imageCouverture) }}"
                                         class="card-img-top"
                                         alt="{{ livreSimilaire.titre }}"
                                         style="height: 250px;"
                                         loading="lazy">
                                {% else %}
                                    <div class="card-img-placeholder" style="height: 250px;">
                                        <i class="fas fa-book"></i>
                                    </div>
                                {% endif %}
                            </a>
                        </div>
                        <div class="card-body">
                            <h6 class="book-title">
                                <a href="{{ path('app_book_show', {id: livreSimilaire.id}) }}"
                                   class="text-decoration-none text-dark">
                                    {{ livreSimilaire.titre }}
                                </a>
                            </h6>
                            <p class="book-author">
                                {% if livreSimilaire.auteurs|length > 0 %}
                                    {{ livreSimilaire.auteurs[0].prenom }} {{ livreSimilaire.auteurs[0].nom }}
                                {% endif %}
                            </p>
                            <div class="book-price-section">
                                <div class="d-flex justify-content-between align-items-center">
                                    <span class="book-price">{{ livreSimilaire.prix|number_format(2, ',', ' ') }} €</span>
                                    {% if livreSimilaire.stock > 0 %}
                                        <span class="stock-badge in-stock">En stock</span>
                                    {% else %}
                                        <span class="stock-badge out-of-stock">Rupture</span>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>
        {% endif %}
    </div>
</section>
{% endblock %}
