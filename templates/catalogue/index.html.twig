{% extends 'base.html.twig' %}

{% block title %}Catalogue - MyBookstore{% endblock %}

{% block content %}
{# ===== Page Header ===== #}
<section class="hero-section" style="padding: 3rem 0;">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-8">
                <h1 class="hero-title" style="font-size: 2.5rem; margin-bottom: 0.5rem;">
                    <i class="fas fa-book me-3" style="color: #fbbf24;"></i>Notre Catalogue
                </h1>
                <p class="lead mb-0" style="color: #bcccdc;">
                    {{ total }} livre{{ total > 1 ? 's' : '' }} disponible{{ total > 1 ? 's' : '' }} pour vous
                </p>
            </div>
            <div class="col-md-4 text-md-end mt-3 mt-md-0">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb justify-content-md-end mb-0" style="background: transparent;">
                        <li class="breadcrumb-item">
                            <a href="{{ path('app_home') }}" class="text-white-50">
                                <i class="fas fa-home"></i> Accueil
                            </a>
                        </li>
                        <li class="breadcrumb-item active text-white" aria-current="page">Catalogue</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</section>

<section class="section" style="padding-top: 2rem;">
    <div class="container-fluid px-4">
        <div class="row">
            {# ===== Filter Sidebar ===== #}
            <div class="col-lg-3 col-md-4 mb-4">
                <div class="filter-sidebar card">
                    <div class="card-header d-flex align-items-center justify-content-between">
                        <h5 class="mb-0">
                            <i class="fas fa-filter me-2"></i> Filtres
                        </h5>
                        <a href="{{ path('app_catalogue') }}" class="btn btn-sm btn-light">
                            <i class="fas fa-redo-alt"></i>
                        </a>
                    </div>
                    <div class="card-body">
                        <form method="get" action="{{ path('app_catalogue') }}" id="filterForm">
                            {# Search Input #}
                            <div class="mb-4">
                                <label class="form-label">
                                    <i class="fas fa-search me-1 text-muted"></i> Recherche
                                </label>
                                <input type="text" class="form-control" name="search"
                                       value="{{ filtres.search }}"
                                       placeholder="Titre, auteur, ISBN...">
                            </div>

                            {# Category Filter #}
                            <div class="mb-4">
                                <label class="form-label">
                                    <i class="fas fa-tags me-1 text-muted"></i> Catégorie
                                </label>
                                <select class="form-select" name="categorie" onchange="this.form.submit()">
                                    <option value="">Toutes les catégories</option>
                                    {% for categorie in categories %}
                                        <option value="{{ categorie.id }}"
                                                {% if filtres.categorie == categorie.id %}selected{% endif %}>
                                            {{ categorie.libelle }}
                                        </option>
                                    {% endfor %}
                                </select>
                            </div>

                            {# Publisher Filter #}
                            <div class="mb-4">
                                <label class="form-label">
                                    <i class="fas fa-building me-1 text-muted"></i> Éditeur
                                </label>
                                <select class="form-select" name="editeur" onchange="this.form.submit()">
                                    <option value="">Tous les éditeurs</option>
                                    {% for editeur in editeurs %}
                                        <option value="{{ editeur.id }}"
                                                {% if filtres.editeur == editeur.id %}selected{% endif %}>
                                            {{ editeur.nomEditeur }}
                                        </option>
                                    {% endfor %}
                                </select>
                            </div>

                            {# Price Range #}
                            <div class="mb-4">
                                <label class="form-label">
                                    <i class="fas fa-euro-sign me-1 text-muted"></i> Fourchette de prix
                                </label>
                                <div class="row g-2">
                                    <div class="col-6">
                                        <input type="number" class="form-control" name="prix_min"
                                               value="{{ filtres.prix_min }}"
                                               placeholder="Min €" step="0.01" min="0">
                                    </div>
                                    <div class="col-6">
                                        <input type="number" class="form-control" name="prix_max"
                                               value="{{ filtres.prix_max }}"
                                               placeholder="Max €" step="0.01" min="0">
                                    </div>
                                </div>
                            </div>

                            {# Hidden sort field #}
                            <input type="hidden" name="tri" value="{{ filtres.tri }}">

                            {# Filter Buttons #}
                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-check me-2"></i> Appliquer les filtres
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

            {# ===== Main Content - Book Grid ===== #}
            <div class="col-lg-9 col-md-8">
                {# Active Filters Tags #}
                {% if filtres.categorie or filtres.editeur or filtres.prix_min or filtres.prix_max or filtres.search %}
                <div class="mb-4">
                    <div class="d-flex flex-wrap align-items-center gap-2">
                        <span class="text-muted me-2"><i class="fas fa-filter me-1"></i> Filtres actifs:</span>

                        {% if filtres.search %}
                            <span class="filter-tag">
                                <i class="fas fa-search me-1"></i> "{{ filtres.search }}"
                                <a href="{{ path('app_catalogue', {categorie: filtres.categorie, editeur: filtres.editeur, prix_min: filtres.prix_min, prix_max: filtres.prix_max, tri: filtres.tri}) }}"
                                   class="remove-filter ms-2">
                                    <i class="fas fa-times"></i>
                                </a>
                            </span>
                        {% endif %}

                        {% if categorieSelectionnee %}
                            <span class="filter-tag">
                                <i class="fas fa-tag me-1"></i> {{ categorieSelectionnee.libelle }}
                                <a href="{{ path('app_catalogue', {editeur: filtres.editeur, prix_min: filtres.prix_min, prix_max: filtres.prix_max, search: filtres.search, tri: filtres.tri}) }}"
                                   class="remove-filter ms-2">
                                    <i class="fas fa-times"></i>
                                </a>
                            </span>
                        {% endif %}

                        {% if editeurSelectionne %}
                            <span class="filter-tag">
                                <i class="fas fa-building me-1"></i> {{ editeurSelectionne.nomEditeur }}
                                <a href="{{ path('app_catalogue', {categorie: filtres.categorie, prix_min: filtres.prix_min, prix_max: filtres.prix_max, search: filtres.search, tri: filtres.tri}) }}"
                                   class="remove-filter ms-2">
                                    <i class="fas fa-times"></i>
                                </a>
                            </span>
                        {% endif %}

                        {% if filtres.prix_min %}
                            <span class="filter-tag" style="background: #ecfdf5; color: #047857;">
                                <i class="fas fa-euro-sign me-1"></i> Min: {{ filtres.prix_min }}€
                                <a href="{{ path('app_catalogue', {categorie: filtres.categorie, editeur: filtres.editeur, prix_max: filtres.prix_max, search: filtres.search, tri: filtres.tri}) }}"
                                   class="remove-filter ms-2">
                                    <i class="fas fa-times"></i>
                                </a>
                            </span>
                        {% endif %}

                        {% if filtres.prix_max %}
                            <span class="filter-tag" style="background: #ecfdf5; color: #047857;">
                                <i class="fas fa-euro-sign me-1"></i> Max: {{ filtres.prix_max }}€
                                <a href="{{ path('app_catalogue', {categorie: filtres.categorie, editeur: filtres.editeur, prix_min: filtres.prix_min, search: filtres.search, tri: filtres.tri}) }}"
                                   class="remove-filter ms-2">
                                    <i class="fas fa-times"></i>
                                </a>
                            </span>
                        {% endif %}

                        <a href="{{ path('app_catalogue') }}" class="btn btn-sm btn-outline-secondary">
                            <i class="fas fa-times me-1"></i> Tout effacer
                        </a>
                    </div>
                </div>
                {% endif %}

                {# Toolbar - Results count and sorting #}
                <div class="card mb-4" style="border-radius: 0.75rem;">
                    <div class="card-body py-3">
                        <div class="d-flex flex-wrap justify-content-between align-items-center gap-3">
                            <div>
                                <span class="fw-semibold">{{ total }}</span>
                                <span class="text-muted">résultat{{ total > 1 ? 's' : '' }}</span>
                            </div>
                            <form method="get" action="{{ path('app_catalogue') }}" class="d-flex align-items-center gap-2">
                                {# Preserve filters #}
                                {% if filtres.categorie %}<input type="hidden" name="categorie" value="{{ filtres.categorie }}">{% endif %}
                                {% if filtres.editeur %}<input type="hidden" name="editeur" value="{{ filtres.editeur }}">{% endif %}
                                {% if filtres.prix_min %}<input type="hidden" name="prix_min" value="{{ filtres.prix_min }}">{% endif %}
                                {% if filtres.prix_max %}<input type="hidden" name="prix_max" value="{{ filtres.prix_max }}">{% endif %}
                                {% if filtres.search %}<input type="hidden" name="search" value="{{ filtres.search }}">{% endif %}

                                <label class="text-muted me-2">
                                    <i class="fas fa-sort me-1"></i> Trier par:
                                </label>
                                <select name="tri" class="form-select form-select-sm" style="width: auto;"
                                        onchange="this.form.submit()">
                                    <option value="newest" {% if filtres.tri == 'newest' %}selected{% endif %}>
                                        Nouveautés
                                    </option>
                                    <option value="price_asc" {% if filtres.tri == 'price_asc' %}selected{% endif %}>
                                        Prix croissant
                                    </option>
                                    <option value="price_desc" {% if filtres.tri == 'price_desc' %}selected{% endif %}>
                                        Prix décroissant
                                    </option>
                                    <option value="title" {% if filtres.tri == 'title' %}selected{% endif %}>
                                        Alphabétique
                                    </option>
                                </select>
                            </form>
                        </div>
                    </div>
                </div>

                {# Book Grid #}
                {% if livres|length > 0 %}
                    <div class="row g-4">
                        {% for livre in livres %}
                        <div class="col-xl-3 col-lg-4 col-md-6 col-sm-6">
                            <div class="card book-card card-hover h-100">
                                <div class="card-img-container">
                                    <a href="{{ path('app_book_show', {id: livre.id}) }}">
                                        {% if livre.imageCouverture %}
                                            <img src="{{ asset('uploads/livres/' ~ livre.imageCouverture) }}"
                                                 class="card-img-top"
                                                 alt="{{ livre.titre }}"
                                                 loading="lazy">
                                        {% else %}
                                            <div class="card-img-placeholder">
                                                <i class="fas fa-book"></i>
                                            </div>
                                        {% endif %}
                                    </a>
                                </div>

                                <div class="card-body">
                                    <h6 class="book-title">
                                        <a href="{{ path('app_book_show', {id: livre.id}) }}"
                                           class="text-decoration-none text-dark">
                                            {{ livre.titre }}
                                        </a>
                                    </h6>

                                    <p class="book-author mb-2">
                                        <i class="fas fa-feather-alt me-1 small"></i>
                                        {% if livre.auteurs|length > 0 %}
                                            {{ livre.auteurs[0].prenom }} {{ livre.auteurs[0].nom }}
                                            {% if livre.auteurs|length > 1 %}
                                                <span class="text-muted">+{{ livre.auteurs|length - 1 }}</span>
                                            {% endif %}
                                        {% else %}
                                            <em>Auteur inconnu</em>
                                        {% endif %}
                                    </p>

                                    <p class="small text-muted mb-0">
                                        <i class="fas fa-building me-1"></i>
                                        {{ livre.editeur.nomEditeur }}
                                    </p>

                                    <div class="book-price-section">
                                        <div class="d-flex justify-content-between align-items-center mb-2">
                                            <span class="book-price">{{ livre.prix|number_format(2, ',', ' ') }} €</span>
                                            {% if livre.stock > 10 %}
                                                <span class="stock-badge in-stock">En stock</span>
                                            {% elseif livre.stock > 0 %}
                                                <span class="stock-badge low-stock">{{ livre.stock }} restant(s)</span>
                                            {% else %}
                                                <span class="stock-badge out-of-stock">Rupture</span>
                                            {% endif %}
                                        </div>
                                        <div class="d-flex gap-2">
                                            <a href="{{ path('app_book_show', {id: livre.id}) }}"
                                               class="btn btn-outline-primary btn-sm flex-grow-1">
                                                <i class="fas fa-eye me-1"></i> Détails
                                            </a>
                                            {% if livre.stock > 0 %}
                                                {% if is_granted('ROLE_ABONNE') %}
                                                    <form action="{{ path('app_cart_add', {id: livre.id}) }}" method="post" class="d-inline">
                                                        <input type="hidden" name="_token" value="{{ csrf_token('cart_add' ~ livre.id) }}">
                                                        <input type="hidden" name="quantity" value="1">
                                                        <button type="submit" class="btn btn-primary btn-sm" title="Ajouter au panier">
                                                            <i class="fas fa-cart-plus"></i>
                                                        </button>
                                                    </form>
                                                {% else %}
                                                    <a href="{{ path('app_login') }}" class="btn btn-secondary btn-sm" title="Connectez-vous pour acheter">
                                                        <i class="fas fa-cart-plus"></i>
                                                    </a>
                                                {% endif %}
                                            {% else %}
                                                <button class="btn btn-secondary btn-sm" disabled title="Rupture de stock">
                                                    <i class="fas fa-cart-plus"></i>
                                                </button>
                                            {% endif %}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        {% endfor %}
                    </div>

                    {# Pagination #}
                    {% if pages > 1 %}
                    <nav aria-label="Pagination" class="mt-5">
                        <ul class="pagination justify-content-center">
                            {# Previous Button #}
                            {% if currentPage > 1 %}
                                <li class="page-item">
                                    <a class="page-link" href="{{ path('app_catalogue', filtres|merge({page: currentPage - 1})) }}">
                                        <i class="fas fa-chevron-left me-1"></i> Précédent
                                    </a>
                                </li>
                            {% else %}
                                <li class="page-item disabled">
                                    <span class="page-link"><i class="fas fa-chevron-left me-1"></i> Précédent</span>
                                </li>
                            {% endif %}

                            {# Page Numbers #}
                            {% set startPage = max(1, currentPage - 2) %}
                            {% set endPage = min(pages, currentPage + 2) %}

                            {% if startPage > 1 %}
                                <li class="page-item">
                                    <a class="page-link" href="{{ path('app_catalogue', filtres|merge({page: 1})) }}">1</a>
                                </li>
                                {% if startPage > 2 %}
                                    <li class="page-item disabled"><span class="page-link">...</span></li>
                                {% endif %}
                            {% endif %}

                            {% for page in startPage..endPage %}
                                <li class="page-item {% if page == currentPage %}active{% endif %}">
                                    <a class="page-link" href="{{ path('app_catalogue', filtres|merge({page: page})) }}">
                                        {{ page }}
                                    </a>
                                </li>
                            {% endfor %}

                            {% if endPage < pages %}
                                {% if endPage < pages - 1 %}
                                    <li class="page-item disabled"><span class="page-link">...</span></li>
                                {% endif %}
                                <li class="page-item">
                                    <a class="page-link" href="{{ path('app_catalogue', filtres|merge({page: pages})) }}">{{ pages }}</a>
                                </li>
                            {% endif %}

                            {# Next Button #}
                            {% if currentPage < pages %}
                                <li class="page-item">
                                    <a class="page-link" href="{{ path('app_catalogue', filtres|merge({page: currentPage + 1})) }}">
                                        Suivant <i class="fas fa-chevron-right ms-1"></i>
                                    </a>
                                </li>
                            {% else %}
                                <li class="page-item disabled">
                                    <span class="page-link">Suivant <i class="fas fa-chevron-right ms-1"></i></span>
                                </li>
                            {% endif %}
                        </ul>
                    </nav>
                    {% endif %}
                {% else %}
                    {# No Results #}
                    <div class="card">
                        <div class="card-body text-center py-5">
                            <div class="mb-4" style="font-size: 4rem; opacity: 0.3;">
                                <i class="fas fa-search"></i>
                            </div>
                            <h4 class="text-muted">Aucun livre trouvé</h4>
                            <p class="text-muted mb-4">
                                Aucun livre ne correspond à vos critères de recherche.
                            </p>
                            <a href="{{ path('app_catalogue') }}" class="btn btn-primary">
                                <i class="fas fa-redo-alt me-2"></i> Réinitialiser les filtres
                            </a>
                        </div>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
</section>
{% endblock %}
